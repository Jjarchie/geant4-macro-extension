{
  "name": "geant4-macro-extension",
  "displayName": "Geant4 Macro Extension",
  "description": "Syntax highlighting and auto-complete for Geant4 macro files",
  "version": "0.0.1",
  "publisher": "jjarchie",
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "g4macro",
        "aliases": [
          "Geant4 Macro",
          "g4macro"
        ],
        "extensions": [
          ".mac"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "g4macro",
        "scopeName": "source.g4macro",
        "path": "./syntaxes/g4macro.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "extension.regenerateCache",
        "title": "Regenerate Cache"
      }
    ]
  },
  "activationEvents": [],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "lint": "eslint \"src/**/*.ts\"",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/vscode": "^1.73.0",
    "@typescript-eslint/eslint-plugin": "^7.14.0",
    "@typescript-eslint/parser": "^7.14.0",
    "eslint": "^8.26.0",
    "typescript": "^5.5.4"
  }
}
